  xmlns="http://www.exoplatform.org/xml/ns/gatein_resources_1_4">

  <portlet-skin>
    <application-name>documents-portlet</application-name>
    <portlet-name>Documents</portlet-name>
    <skin-name>Enterprise</skin-name>
    <css-path>/skin/css/documents.css</css-path>
  </portlet-skin>

  <portlet>
